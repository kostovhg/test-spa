<!-- Experience Section -->
<div class="container text-center">
    <h1 class="text-uppercase mb-0">{{nav.experience}}</h1>
    <hr class="star-light">
    <div class="card-deck">
       {{#if experience}}
            {{#each experience}}
            {{>experienceRecord}}
            {{/each}}
        {{else}}
            <h3>This person is practically without experience</h3>
       {{/if}}
    </div>
</div>